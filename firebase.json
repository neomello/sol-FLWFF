{
    "functions": {
      "source": "functions"
    },
    "hosting": {
      "public": "build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "auth"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }
  